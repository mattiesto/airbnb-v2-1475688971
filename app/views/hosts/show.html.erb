<div class="page-header">
  <h3>Host #<%= @host.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @host.user_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/hosts" class="btn btn-primary">
        Back
      </a>
      <a href="/hosts/<%= @host.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_host/<%= @host.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- A Host has many messages -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Messages
      </li>

      <% @host.messages.each do |message| %>
        <li class="list-group-item">
          <a href="/messages/<%= message.id %>">
            <%= message.content %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- A Host has many listings -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Listings
      </li>

      <% @host.listings.each do |listing| %>
        <li class="list-group-item">
          <a href="/listings/<%= listing.id %>">
            <%= listing.title %>
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>
