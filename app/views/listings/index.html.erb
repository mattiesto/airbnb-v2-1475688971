<div class="page-header">
  <h1>
    Listings
    <a href="/listings/new" class="btn btn-lg btn-success">New Listing</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Room or home</th>
        <th>Description</th>
        <th>Number of rooms</th>
        <th>Number of bathrooms</th>
        <th>Number of beds</th>
        <th>Max occupants</th>
        <th>City</th>
        <th>Neighborhood</th>
        <th>Policies</th>
        <th>Default price</th>
        <th>Host</th>
        <th>Actions</th>
      </tr>

      <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.title %></td>
        <td><%= listing.room_or_home %></td>
        <td><%= listing.description %></td>
        <td><%= listing.number_of_rooms %></td>
        <td><%= listing.number_of_bathrooms %></td>
        <td><%= listing.number_of_beds %></td>
        <td><%= listing.max_occupants %></td>
        <td><%= listing.city %></td>
        <td><%= listing.neighborhood %></td>
        <td><%= listing.policies %></td>
        <td><%= listing.default_price %></td>
        <td><%= listing.host_id %></td>
        <td>
          <a href="/listings/<%= listing.id %>" class="btn btn-primary">Show</a>
          <a href="/listings/<%= listing.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_listing/<%= listing.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
